<div class="mt-10">
  <div class="flex flex-col space-y-4">
    <h2 class="font-bold text-2xl"><%= @decision.title %></h2>
    <div class="flex space-x-4">
      <p><%= @decision.date %></p>
      <%= status_text(@decision.status) %>
    </div>

    <div>
      <p><%= @decision.description %></p>
    </div>

    <div class="pt-7 flex space-x-2">
      <%= link_to "Edit", edit_decision_path(@decision), class:"bg-gray-900 text-white rounded-md px-3 py-2" %>

      <%= link_to "Back", decisions_path, class: "bg-blue-400 text-white rounded-md px-3 py-2 font-medium" %>
    </div>
  </div>
</div>
