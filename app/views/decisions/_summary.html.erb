<%= link_to decision do %>
  <div class="size-full p-6 rounded-xl shadow-lg border border-solid border-black flex flex-col space-y-4">
    <div class="flex flex-col space-y-2 size-full">
      <h2 class="font-bold text-2xl"><%= decision.title %></h2>
      <div class="flex space-x-4">
        <p><%= decision.date %></p>
        <%= status_text(decision.status) %>
      </div>
    </div>

    <div>
      <p class="line-clamp-4">
        <%= decision.description %>
      </p>
    </div>
  </div>
<% end %>
